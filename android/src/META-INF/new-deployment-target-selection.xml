<idea-plugin>
  <actions>
    <!--suppress PluginXmlCapitalization -->
    <action id="RunningDevices" class="com.android.tools.idea.run.deployment.Heading" text="Running devices"/>

    <!--suppress PluginXmlCapitalization -->
    <action id="AvailableDevices" class="com.android.tools.idea.run.deployment.Heading" text="Available devices"/>

    <action id="SelectMultipleDevices" class="com.android.tools.idea.run.deployment.SelectMultipleDevicesAction"
            text="Select Multiple Devices..." icon="StudioIcons.DeviceExplorer.MULTIPLE_DEVICES"/>

    <action id="DeviceAndSnapshotComboBox" class="com.android.tools.idea.run.deployment.DeviceAndSnapshotComboBoxAction"
            text="Select Device">
      <add-to-group group-id="RunMenu" relative-to-action="editRunConfigurations" anchor="after"/>
      <add-to-group group-id="ToolbarRunGroup" relative-to-action="RunConfiguration" anchor="after"/>
      <add-to-group group-id="MainToolbarRight" anchor="first" />

      <keyboard-shortcut keymap="$default" first-keystroke="alt shift F11"/>
    </action>
  </actions>

  <extensions defaultExtensionNs="com.android.run">
    <deployTargetProvider implementation="com.android.tools.idea.run.deployment.DeviceAndSnapshotComboBoxTargetProvider"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <executionTargetProvider implementation="com.android.tools.idea.run.deployment.DeviceAndSnapshotExecutionTargetProvider"/>

    <projectService serviceImplementation="com.android.tools.idea.run.deployment.AsyncDevicesGetter"/>
    <projectService serviceImplementation="com.android.tools.idea.run.deployment.DevicesSelectedService"/>
    <projectService serviceImplementation="com.android.tools.idea.run.deployment.ExecutionTargetService"/>
  </extensions>
</idea-plugin>