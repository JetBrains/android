<idea-plugin>
  <actions>
    <action class="com.android.tools.idea.rendering.webp.ConvertToWebpAction" id="ConvertToWebp">
      <add-to-group group-id="ProjectViewPopupMenu"/>
      <add-to-group group-id="Images.EditorPopupMenu" relative-to-action="RefactoringMenu" anchor="after"/>
    </action>
    <action class="com.android.tools.idea.rendering.webp.ConvertFromWebpAction" id="ConvertFromWebp">
      <add-to-group group-id="ProjectViewPopupMenu"/>
      <add-to-group group-id="Images.EditorPopupMenu" relative-to-action="RefactoringMenu" anchor="after"/>
    </action>

    <group id="ResourceExplorer.webp" popup="false">
      <add-to-group group-id="ResourceExplorer" anchor="last"/>
      <separator/>
      <reference ref="ConvertToWebp" />
    </group>
  </actions>

  <extensions defaultExtensionNs="com.android">
    <rendering.renderSecurityManagerOverrides implementation="com.android.tools.idea.rendering.webp.WebpRenderSecurityManagerOverrides"/>
  </extensions>
</idea-plugin>
