<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="Theme.Holo.Light" parent="android:Theme.Light">
        <item name="android:textAppearanceMedium">@android:style/TextAppearance.Holo.Light.Medium</item>
        <item name="android:textColorPrimary">#ff000000</item>
        <item name="android:textColorHighlight">6633b5e5</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:textColorLink">#ff33b5e5</item>

    </style>

    <style name="TextAppearance.Holo.Light.Medium" parent="TextAppearance.Holo.Medium">
    </style>

    <style name="TextAppearance.Holo.Medium" parent="TextAppearance.Medium">
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyOtherTheme" parent="android:Theme.Framework<caret>Theme" />

</resources>
