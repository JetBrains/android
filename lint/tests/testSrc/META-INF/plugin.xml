<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
  <name>Lint IDE tests</name>
  <id>com.android.tools.idea.lint.common.tests</id>

  <depends>com.intellij.properties</depends>
  <depends>org.intellij.groovy</depends>
  <depends>JUnit</depends>
  <depends>org.jetbrains.plugins.gradle</depends>
  <xi:include href="/META-INF/lint-plugin.xml" xpointer="xpointer(/idea-plugin/*)"/>

  <!-- Make .gradle files associated with groovy file types. Depending on the Gradle plugin was not enough. -->
  <extensions defaultExtensionNs="com.intellij">
    <fileType name="Groovy" extensions="gradle"/>
  </extensions>
</idea-plugin>
