<idea-plugin>
  <id>com.android.gmdcodecompletion</id>
  <name>Gradle managed device code completion</name>
  <version>1.0</version>
  <vendor>Google</vendor>

  <description>Enables GMD code completion.</description>

  <depends>org.jetbrains.android</depends>
  <depends>com.google.gct.testing</depends>
  <depends>com.google.gct.login</depends>

  <projectListeners>
    <listener class="com.android.gmdcodecompletion.GmdCodeCompletionGradleSyncListener"
              topic="com.android.tools.idea.projectsystem.ProjectSystemSyncManager$SyncResultListener"/>
  </projectListeners>
</idea-plugin>